 <%= form_for(@book) do |f| %>  
    <%= f.label :Title %><br> 
    <%= f.text_field :title %> </br>
    <%= f.label :Genre %><br> 
    <%= f.text_field :genre %> </br>
    <%= f.label :Year %><br> 
    <%= f.text_field :year %> </br>
    <%= f.label :Plot %><br> 
    <%= f.text_area :plot %> </br>
    <%= f.hidden_field :author_id, value: @book.author.id %>
    <%= f.submit "Save" %> 
    <%= link_to 'Return', book_path(@book) %>
<% end %>