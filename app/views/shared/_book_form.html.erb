<% provide(:title, title) %>
<div class="container text-center">
    <div class="page-header">
        <h1><%= title %></h1>    
    </div>
</div>
<div class="row">
    <div class="col-md-2 col-md-offset-5">
        <%= form_for(@book) do |f| %> 
        <%= render 'shared/error_messages', model: @book %> 
            <div class="form-group">           
                <%= f.label :Title, class: "control-label"  %>
                <%= f.text_field :title, class: "form-control"  %>
            </div>
            <div class="form-group"> 
                <%= f.label :Genre , class: "control-label" %> 
                <%= f.text_field :genre, class: "form-control"  %>
            </div>
            <div class="form-group"> 
                <%= f.label :Year , class: "control-label" %>
                <%= f.text_field :year, class: "form-control"  %>
            </div>
            <div class="form-group"> 
                <%= f.label :Plot, class: "control-label"  %>
                <%= f.text_area :plot, rows: "10", class: "form-control"  %>
            </div>
            <%= f.hidden_field :author_id, value: author_id %>
            <%= f.submit "Save", class: "btn btn-default"  %> 
        <% end %>
    </div>
</div>