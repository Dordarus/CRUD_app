 <header class="navbar navbar-inverse navbar-static-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_path, class: "navbar-brand" do %><strong>Library</strong><% end %>
    </div>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Books', books_index_path %></li>
      <li><%= link_to 'Authors', authors_index_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if logged_in? %>
        <li><%= link_to "Users", '#' %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user"></span> <%= current_user.name %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign out", sign_out_path, method: :delete %></li>
          </ul>        
        </li>
      <% else %>
        <li><%= link_to sign_in_path do %><span class="glyphicon glyphicon-log-in"></span> Sign In<% end %></li>
      <% end %>    
    </ul>
  </div>
</header> 