<div class="container">
    <div class="page-header">
        <h1>Authors</h1>
        <%= link_to 'Show All Books', '/books' %>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <% @authors.each do |a| %>
            <tr>
                <td>
                    <%= a.first_name %> <%= a.last_name %>
                </td>
                <td>
                    <%= link_to 'Show info', author_path(a), class: 'btn btn-info btn-sm' %>
                </td>
                <td>
                    <%= link_to 'Edit', edit_author_path(a), class: 'btn btn-primary btn-sm' %>
                </td>
            </tr>    
            <% end %>
        </tbody>
    </table>
    <%= link_to 'Create New Author', new_author_path, class: 'btn btn-primary btn-sm' %>
</div>
