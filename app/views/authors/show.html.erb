<h2><%= @author.first_name %> <%= @author.last_name %></h2>
<p><i><%= @author.bio %></i></p>
<%= link_to 'Edit', edit_author_path(@author) %>
<h2>Books</h2>
<%= link_to 'Add new book', new_book_path(@author.id) %></br></br>
<% if @books_any %>
    <% @books.each do |b| %>
    <strong>Title</strong>
    <p><i><%= b.title %></i></p>
    <strong>Year</strong>
    <p><i><%= b.year %></i></p>
    <strong>Genre</strong>
    <p><i><%= b.genre %></i></p>
    <strong>Plot</strong>
    <p><i><%= b.plot %></i></p>
    <%= link_to 'Show', book_path(b) %>
    <%= link_to "Delete", book_path(b), method: :delete, data: { confirm: "You sure?" } %>
    <p>---------------------------------</p>
    <% end %>
<% else %>
 <p><i>No books, yet</i></p>
<% end %>
